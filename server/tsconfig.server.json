{
   "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "sourceMap": true,
      "jsx": "react",
      "paths": {
         "@assets/*": [
            "./assets/*"
         ],
         "@components/*": [
            "./src/components/*"
         ],
         "@pages/*": [
            "./src/pages/*"
         ]
      }
   },
   "exclude": [
      "../node_modules"
   ]
}
