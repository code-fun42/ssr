{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "sourceMap": false,
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "webpack.client.config.ts",
    "webpack.common.config.ts",
    "webpack.devserver.config.ts",
    "webpack.server.config.ts",
    "webpack.vendor.config.ts"
  ]
}